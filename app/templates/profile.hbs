{{outlet}}
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 padding-right">
				<h2 class="title text-center">Perfil de usuario</h2>
                <div class="form-group">
                    <label>Correo electrónico: {{model.email}}</label>
                </div>
                <div class="form-group">
                    <label>*Nombre de la Empresa: </label>
                    {{input type="text" class="form-control" value=model.namecompany id="new_namecompany"}}
                </div>
                <div class="form-group">
                    <label>Nombre Completo Cliente/Representate Legal:</label>
                    {{input type="text" class="form-control" value=model.name id="new_name"}}
                </div>
                <div class="form-group">
                    <label>CI Cliente/Representate Legal:</label>
                    {{input type="number" class="form-control" value=model.ci id="new_ci"}}
                </div>
                <div class="form-group">
                    <label>Dirección:</label>
                    {{input type="text" class="form-control" value=model.address id="new_address"}}
                </div>
                <div class="form-group">
                    <label>Teléfono:</label>
                    {{input type="number" class="form-control" value=model.phone id="new_phone"}}
                </div>
                <div class="form-group">
                    <label>Celular:</label>
                    {{input type="number" class="form-control" value=model.cellphone id="new_cellphone"}}
                </div>
                <div class="form-group">
                    <label>Celular de WhatsApp:</label>
                    {{input type="number" class="form-control" value=model.cellwsp id="new_cellwsp"}}
                </div>

                <div class="form-group">
                    <label>Nombre para la Factura:</label>
                    {{input type="text" class="form-control" value=model.nameinvoice id="new_nameinvoice"}}
                </div>
                <div class="form-group">
                    <label>NIT Factura Cliente/Representate Legal:</label>
                    {{input type="text" class="form-control" value=model.nit id="new_nit"}}
                </div>
                <div class="form-group">
                    <label>*NIT (Si usted no cuentan con una profesión o negocio del rubro, omita este dato)</label>
                    <center>
                        <img id="output" height="400" width="350" hidden={{shouldHideImage}} src="{{model.image}}">
                        <p></p>
                        {{x-file-input class="custom-class" multiple=false name="files" action='didSelectImage' accept="image/*" alt="Subir Imagen"}}
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100"
                        aria-valuemin="0" aria-valuemax="100" style="width:100%" id="mensaje"></div>
                    </center>
                </div>
                <div class="form-group">
                    <label>*CI (Si usted no cuentan con una profesión o negocio del rubro, omita este dato)</label>
                    <center>
                        <img id="output2" height="400" width="350" hidden={{shouldHideImage}} src={{model.imageci}}>
                        <p></p>
                        {{x-file-input class="custom-class" multiple=false name="files" action='didSelectImage2' accept="image/*" alt="Subir Imagen"}}
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100"
                        aria-valuemin="0" aria-valuemax="100" style="width:100%" id="mensaje2"></div>
                    </center>
                </div>
                <center>
                    <button {{action 'save' model.id}} class="btn btn-info">Guardar cambios</button>
                    <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
                </center>
            </div>
        </div>
    </div>
</section>