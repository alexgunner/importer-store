{{outlet}}

<div class="container">
    <h1>Orden</h1>
    <div class="col-sm-9 padding-center">
        <form class="form-horizontal">
            <div class="form-group">
                <label>Fecha:</label>
                {{input type="date" class="form-control" value=model.orderdate}}
            </div>
            <div class="form-group">
                <label>Nombre:</label>
                {{input type="text" class="form-control" value=model.client}}
            </div>
            <div class="form-group">
                <label>Confirmar:</label>
                {{input type="text" class="form-control" value=model.confirmed}}
            </div>
            <div>
                <button {{action 'save'}}>Continuar</button>
                <button {{action 'cancel'}}>Cancelar</button>
            </div>
        </form>
	</div>
</div>