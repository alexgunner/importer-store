{{outlet}}
<section>
	<div class="container">
		<div class="row">
			<!-- Left sideBar -->
			{{left-sidebar categories=model.categories manufacturers=model.manufacturers extras=model.extras}}
			<!-- Left sideBar -->
			<div class="col-sm-9 padding-right"> 
				<div class="features_items">
                    <h2 class="title text-center">Tiendas y Sucursales</h2>
                    <div class="row">
                        {{#each model.offices as |office|}}
                        {{model.office.name}}
                        <div class="col-lg-8">
                            <script>
                                function initMap() {
                                    var latitud = parseFloat(document.getElementById('map').getAttribute("data-lat"));
                                    var longitud = parseFloat(document.getElementById('map').getAttribute("data-lng"));
                                    console.log(latitud);
                                    var uluru = {lat: latitud, lng: longitud};
                                    var map = new google.maps.Map(document.getElementById('map'), {
                                    zoom: 17,
                                    center: uluru
                                    });
                                    var marker = new google.maps.Marker({
                                    position: uluru,
                                    map: map
                                    });
                                }
                            </script>
                        <script async defer
                        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAy4PzSIG77OtqMciXyhMuTD9tQSICh0LM&callback=initMap">
                        </script>
                        <div class="col-lg-8">
                            <div id="map" style="width: 550px; height: 400px;" data-lat="{{office.lat}}" data-lng="{{office.long}}"></div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                </div>
            </div>
        </div>
    </div>
</section>
