<div class="col-sm-6 ">
    <div class="form-group">
        <label>Nombre Completo Cliente/Representate Legal:</label>
        {{input type="text" class="form-control" value=form_name id="new_name"}}
    </div>
    <div class="form-group">
        <label>CI Cliente/Representate Legal:</label>
        {{input type="number" class="form-control" value=form_ci id="new_ci"}}
    </div>
    <div class="form-group">
        <label>Teléfono:</label>
        {{input type="number" class="form-control" value=form_phone id="new_phone"}}
    </div>
    <div class="form-group">
        <label>Celular:</label>
        {{input type="number" class="form-control" value=form_cellphone id="new_cellphone"}}
    </div>
    <div class="form-group">
        <label>Celular de WhatsApp:</label>
        {{input type="number" class="form-control" value=form_cellwsp id="new_cellwsp"}}
    </div>
    <div class="form-group">
        <label>Nombre para la Factura: (Si se requiere)</label>
        {{input type="text" class="form-control" value=form_nameinvoice id="new_nameinvoice"}}
    </div>
    <div class="form-group">
        <label>NIT Factura Cliente/Representate Legal: (Si se requiere)</label>
        {{input type="text" class="form-control" value=form_nit id="new_nit"}}
    </div>
</div>

<div class="col-sm-6">
    <div class="form-group">
        <label>Destino:</label>
        <select  {{action 'loadSends'}} id="destinos" class="form-control">
            <option value="0">Elige un destino</option>
            {{#each destinations as |destination|}}
                <option value="{{destination.id}}">{{destination.name}} - {{destination.city}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Entrega:</label>
        <select  {{action 'selected'}} id="entrega" class="form-control">
            <option value="0">Elige tu tipo de entrega</option>
            <option value="Domicilio">A domicilio</option>
            <option value="Transportista">Recoger en transportista</option>
        </select>
    </div>

    <div id="tien" style="display:none;" class="form-group">
        <label>Tiendas o Sucursales:</label>
        <select id="tiendas" class="form-control">
            <option value="0">Selecciona una tienda o sucursal</option>
        </select>
    </div>

    <div id="deliv" style="display:none;" class="form-group">
        <label>Delivery y Costo:</label>
        <select id="deliveries" class="form-control">
            <option value="0">Elige un delivery</option>
        </select>
    </div>

    <div class="form-group">
        <label>Forma de pago:</label>
        <select id="pagos" class="form-control">
            <option value="0">Elige una forma de pago</option>
            <option value="Tarjeta">Tarjeta débito o crédito</option>
            <option value="Deposito">Depósito Bancario</option>
        </select>
    </div>
    <div class="form-group">
        <label>Dirección:</label>
        {{textarea type="text" rows="5" class="form-control" value=form_address id="new_address"}}
    </div>
</div>

<div class="text-center">
    <button {{action 'save'}} id="save-button" class="btn btn-info">Aceptar</button>
    <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
</div>

