<div class="col-sm-6">
    <div class="form-group">
        <label>Destino:</label>
        <select  {{action 'loadSends'}} id="destinos" class="form-control">
            <option value="0">Elige un destino</option>
            {{#each destinations as |destination|}}
                <option value="{{destination.id}}">{{destination.name}} - {{destination.city}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Entrega:</label>
        <select id="entregas" class="form-control">
            <option value="0">Elige tu tipo de entrega</option>
            <option value="Domicilio">A domicilio</option>
            <option value="Transportista">Recoger en transportista</option>
            <option value="Tienda">Recoger en tienda</option>
        </select>
    </div>
</div>
