<div class="col-sm-6">
    <div class="form-group">
        <label>Delivery y Costo:</label>
        <select id="deliveries" class="form-control">
            <option value="0">Elige un delivery</option>
             {{#each deliveries as |delivery|}}
                <option value="{{delivery.id}}">{{delivery.name}} // Costo: {{delivery.cost}} - Costo minimo: {{delivery.costmin}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label>Forma de pago:</label><br/>
        <input type="radio" name="pay" value="Tarjeta"> Tarjeta crédito débito <i class="fa fa-credit-card" style="font-size: 2.5em;"></i><br>
        <input type="radio" name="pay" value="Deposito"> Depósito Bancario <i class="fa fa-file-text" style="font-size: 2.5em;"></i><br>
        <input type="radio" name="pay" value="Contraentrega"> Al momento de la entrega <i class="fa fa-money" style="font-size: 2.5em;"></i><br>
    </div>
</div>

<div class="text-center">
    <button {{action 'save' order.id}} id="save-button" class="btn btn-info">Aceptar</button>
    <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
</div>
    
