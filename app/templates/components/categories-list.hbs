{{#each categories as |category|}}
<div class="col-sm-3">
	<a class="category-image-wrapper" href="/category-products/{{category.id}}">
		<div class="single-products">
			<div class="productinfo text-center">
				<img src="{{category.picture}}" alt="" class="img-responsive"/>
				<p>{{category.name}}</p>
			</div>
		</div>
	</a>
</div>
{{/each}}
