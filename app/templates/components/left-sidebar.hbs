<div class="col-sm-3">
  <div class="left-sidebar">
    <h2 class="lower-case">Categor√≠as</h2>
    <div class="panel-group category-products" id="accordian"><!--category-products-->
    
	{{#each categories as |category|}}
        <div class="panel panel-default">
          	<div class="panel-heading">
				<h4 class="panel-title">
				{{#if (eq category.subcategories.length 0)}}
					<a href="#">{{category.name}}</a>
				{{else}}
					<a data-toggle="collapse" data-parent="#accordian" href="#category{{category.id}}">
						<span class="glyphicon glyphicon-chevron-down"></span>
						<a href="/category-products/{{category.id}}">{{category.name}}</a>
					</a>
				{{/if}}
				</h4>
          	</div>

			{{#if (gt category.subcategories.length 0) }}
            	<div id="category{{category.id}}" class="panel-collapse collapse">
					<div class="panel-body">
					<ul>
					{{#each category.subcategories as |subcategory|}}
						<li><a href="/subcategory-products/{{subcategory.id}}">{{subcategory.name}}</a></li>
					{{/each}}
					</ul>
				</div>
            </div>
			{{/if}}
        </div>
    {{/each}}
    </div><!--/category-products-->

    <div class="brands_products"><!--brands_products-->
      <h2 class="lower-case">Fabricantes</h2>
      <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
        {{#each manufacturers as |manufacturer|}}
            <li><a href="#">{{manufacturer.name}}</a></li>
        {{/each}}
        </ul>
      </div>
    </div><!--/brands_products-->

    <div class="shipping text-center"><!--shipping-->
      <img src="{{extras.lastObject.banner}}" alt="" class="img-responsive" />
    </div><!--/shipping-->

  </div>
</div>