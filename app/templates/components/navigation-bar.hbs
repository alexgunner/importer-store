<header id="header"><!--header-->
	<div class="header_top"><!--header_top-->
		<div class="container">
			<div class="row">
				<div class="col-sm-6">
					<div class="contactinfo">
						<ul class="nav nav-pills">
							<li><a href="#"><i class="fa fa-phone"></i> {{contact.lastObject.phone}}</a></li>
							<li><a href="#"><i class="fa fa-envelope"></i> {{contact.lastObject.email}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="social-icons pull-right">
						<ul class="nav navbar-nav">
							<li><a href="{{contact.lastObject.facebook}}" target="_blank"><i class="fa fa-facebook"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div><!--/header_top-->

	<div class="header-middle"><!--header-middle-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
					<div class="logo pull-left">
						<a href="/"><img src="{{extras.lastObject.logo}}" alt="" class="img-responsive" /></a>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="shop-menu pull-right">
						<ul class="nav navbar-nav">
							<li><a href="/cart"><i class="fa fa-shopping-cart"></i> Carrito de compras 
							{{#if (gt items.length  0)}}<span class="badge">
								{{items.length}}</span>
							{{/if}}</a></li>
						</ul>
						<ul class="nav navbar-nav">
							{{#if session.isAuthenticated}}
								<li><a href="/"{{action 'logout'}}><span class="glyphicon glyphicon-log-out"></span> Cerrar sesión</a></li>
								<li><h4>Bienvenido/a 
								{{session.data.authenticated.name}} {{session.data.authenticated.lastname}}</h4></li>
							{{else}}
								<li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Iniciar sesión</a></li>
							{{/if}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div><!--/header-middle-->

	<div class="header-bottom"><!--header-bottom-->
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<div class="mainmenu pull-left">
						<ul class="nav navbar-nav collapse navbar-collapse">
							<li><a href="/">Inicio</a></li>
							<li><a href="/about-us">Nosotros</a></li>
							<li class="dropdown"><a href="#">Tienda<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li><a href="/categories">Categorías</a></li>
                                    <li><a href="/products-offer">Ofertas</a></li>
                                </ul>
                            </li>
                            <li><a href="/services">Servicios</a></li>
							<li><a href="/contact">Contactos</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="search_box pull-right">
						<form action="/search" accept-charset="UTF-8" method="get">
							<input name="utf8" type="hidden">
							<input type="text" name="name" id="name" placeholder="Buscar">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div><!--/header-bottom-->
</header><!--/header-->
