{{#each products as |product|}}
	<div class="col-sm-4">
		<div class="product-image-wrapper">
			<div class="single-products">
					<div class="productinfo text-center">
						<img src="{{product.picture}}" alt="" />
						<h2>{{product.code}}</h2>
						<p>{{product.name}}</p>
						<a href="#" class="btn btn-default add-to-cart"
						data-toggle="modal" data-target="#product{{product.id}}"><span class="glyphicon glyphicon-eye-open"></span> Ver más</a>
					</div>
					<div class="product-overlay">
						<div class="overlay-content">
							<h2>{{product.code}}</h2>
							<p>{{product.name}}</p>
							<p>{{product.description}}</p>
							<a href="#" class="btn btn-default add-to-cart"
							data-toggle="modal" data-target="#product{{product.id}}"><span class="glyphicon glyphicon-eye-open"></span> Ver más</a>
						</div>
					</div>
				<!-- Modal -->
						<div class="modal fade" id="product{{product.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
						  <div class="modal-dialog" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						        <h2 class="title text-center">{{product.name}}</h2>
						      </div>
						      <div class="modal-body">
						        <div class="row">
						        	<div class="col-lg-12">
						        		<center>
						        			<img src="{{product.picture}}" alt="" class="image-responsive"/>
						        		</center>
						        	</div>
						        </div>
						        <div class="row">
						        	<div class="col-lg-12">
						        		<p class="justified-text">
						        			{{product.description}}
						        		</p>
						        	</div>
						        </div>
						        <div class="row">
						        	<div class="col-lg-12">
						        		<p class="justified-text">
						        			<strong>Fabricante: </strong>{{product.manufacturer.name}} - <strong>Industria: </strong>{{product.manufacturer.country}}	
						        		</p>
						        		{{#if (not-eq product.details "/details/original/missing.png")}}
							        		<p class="justified-text">
							        			<a target="_blank" href="http://localhost:3000/{{product.details}}" class="btn btn-primary">Descargar ficha técnica </a>
							        		</p>
							        	{{/if}}
						        	</div>
						        </div>
						        {{#if (gt product.product_variants.length  0)}}
							        <div class="row">
							        	<div class="col-lg-12">
							        		<center><h4>Variantes</h4></center>
							        		<div class="table-responsive">
							        			<table class="table table-striped table-hover">
							        				<thead>
							        					<th>Código</th>
							        					<th>Descripción</th>
							        					<th>Precio</th>
							        					<th></th>							        					
							        				</thead>
							        				<tbody>
							        					{{#each product.product_variants as |variant|}}
							        						<tr>
							        							<td align="justify">
							        								{{variant.code}}
							        							</td>
							        							<td align="left">
							        								{{variant.description}}
							        							</td>
							        							<td align="left">
							        								{{#if (eq variant.offerprice null)}}
							        									Bs. {{variant.price}}
							        								{{else}}
							        									OFERTA: Bs. {{variant.offerprice}}
							        								{{/if}}
							        							</td>
																<td align="left">
																	{{#if variant.reposition}}
																		{{variant.reposition_date}}
																	{{else}}
																		<button {{action 'addToCart' variant}} class="btn btn-default add-to-cart">
																		<i class="fa fa-shopping-cart"></i>Añadir al carrito</button>
																	{{/if}}
																</td>
							        						</tr>
							        					{{/each}}
							        				</tbody>
							        			</table>
							        		</div>
							        	</div>
							        </div>
							    {{/if}}
						      </div>
						      <div class="modal-footer">
						        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
						      </div>
						    </div>
						  </div>
						</div>
			</div>
		</div>
	</div>
{{/each}}