{{outlet}}
<div class="container">
    <h1>Productos en Carrito</h1>
    {{#each model.products as |product|}}
        {{#each model.items as |item|}}
            {{#if (is-equal product.id item.product_id) }}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><p>{{product.name}}</p></h3>
                    </div>
                    <div class="panel-body">
                        <img src="{{product.picture}}" width="200" height="200" />
                        detalles del producto
                        <p>Cantidad:</p>
                        {{item.quantity}}
                        <button {{action 'addQuantity' item}}type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                        <button {{action 'restQuantity' item}}type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
                        <button {{action 'deleteToCart' item}} type="button" class="btn btn-danger">Quitar del carrito</button>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    {{/each}}
    <button type="button" class="btn btn-default">Seguir Comprando</button>
    <button {{action 'newOrder'}} ype="button" class="btn btn-warning">Completar Transacci√≥n</button>
</div>