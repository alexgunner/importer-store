{{outlet}}
<section>
	<div class="container">
		<div class="row">
			<!-- Left sideBar -->
			{{left-sidebar categories=model.categories manufacturers=model.manufacturers extras=model.extras}}
			<!-- Left sideBar -->
			<div class="col-sm-9 padding-right">
				<h2 class="title text-center">Buscador</h2>
                {{input value=query on-key-press=(action (mut query)) class="form-control" placeholder="Buscar..."}}
                <div class="recommended_items"><!--features_items-->
                    {{#each (search query model.products properties=searchProperties) as |product|}}
                    <div class="col-sm-3">
                        <a class="product-image-wrapper" href="/product-details/{{product.id}}">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img class="img-responsive" src="{{product.picture}}" alt="" />
                                    <h4>{{product.name}}</h4>
                                    <p>{{truncate-text product.description limit=65}}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/each}}
                </div>
			</div>
		</div>
	</div>
</section>
