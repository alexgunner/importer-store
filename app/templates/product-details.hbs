<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">{{model.product.code}}</h2>
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <br/>
                            <br/>
                            <div class="row">
                            <div class="col-md-6">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="3" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="4" class="active"></li>
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="{{model.product.picture}}" class="img-thumbnail">
                                    </div>
                                    <div class="item">
                                        <img src="{{model.product.picture2}}" class="img-thumbnail">    
                                    </div>
                                    <div class="item">
                                        <img src="{{model.product.picture3}}" class="img-thumbnail">    
                                    </div>
                                    <div class="item">
                                        <img src="{{model.product.picture4}}" class="img-thumbnail">    
                                    </div>
                                </div>
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                                </a>
                            </div>
                            </div>
                            <div class="col-sm-2">
                            <h4>Nombre:</h4>
                            {{model.product.name}}
                            <h4>Descripción:</h4>
                            {{model.product.description}}
                            <h4>Fabricante:</h4>
                            <p>{{model.product.manufacturer.name}}</p>
                            <h4>Proveedor:</h4>
                            <p>{{model.product.provider.name}}</p>
                            <h4>Medida:</h4>
                            <p>{{model.product.measure.name}}</p>
                             {{#if (not-eq model.product.details "/details/original/missing.png")}}
                                <p class="justified-text">
                                    <a target="_blank" href="{{model.host}}/{{model.product.details}}" class="btn btn-primary">Descargar ficha técnica </a>
                                </p>
                            {{/if}}
                            </div>
                            </div>
                            {{product-details product=model.product product_variants=model.product_variants items=model.items}}
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</section>